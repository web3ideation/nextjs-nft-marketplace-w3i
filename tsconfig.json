{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
        "@components/*": ["components/*"],
        "@config/*":["config/*"],
        "@constants/*":["constants/*"],
        "@context/*":["context/*"],
        "@hooks/*":["hooks/*"],
        "@pages/*":["pages/*"],
        "@public/*": ["public/*"],
        "@styles/*":["styles/*"],
        "@utils/*":["utils/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
